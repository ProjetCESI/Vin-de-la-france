<Window x:Class="VinWpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VinWpf"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,10,0,0"/>
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,10,0,0"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="0,20,0,0" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
