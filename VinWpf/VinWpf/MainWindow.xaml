<Window x:Class="VinWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VinWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Name="MainTabControl">
            <TabItem Header="Clients">
                <Frame Source="/Views/Clients.xaml"/>
            </TabItem>
            <TabItem Header="Fournisseurs">
                <Frame Source="/Views/Fournisseurs.xaml"/>
            </TabItem>
            <TabItem Header="Familles">
                <Frame Source="/Views/Familles.xaml"/>
            </TabItem>
            <TabItem Header="Articles">
                <Frame Source="/Views/Articles.xaml"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
