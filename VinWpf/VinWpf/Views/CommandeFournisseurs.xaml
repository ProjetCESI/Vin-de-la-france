<Page x:Class="VinWpf.Views.CommandeFournisseurs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VinWpf.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CommandeFournisseurs"
      Loaded="LoadPage">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Margin="0,0,0,20" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18">Commande Fournisseurs</TextBlock>

            <TextBlock x:Name="NameArticle" FontSize="16" FontWeight="Bold" Margin="0,10,0,0" />
            <TextBlock x:Name="QuantiteArticle" FontSize="14" Margin="0,5,0,0" />
            <TextBlock x:Name="StockMinimumArticle" FontSize="14" Margin="0,5,0,0" />
            <TextBlock x:Name="ReferenceArticle" FontSize="14" Margin="0,5,0,0" />
            <TextBlock Text="Quantité à commander :" />
            <TextBox Name="QuantiteCommandeTextBox" Width="200" />

            <Button Content="Commander" Click="Commander_Click" Width="100" />
        </StackPanel>
    </Grid>
</Page>
