@model IEnumerable<Vin_de_la_france.Models.Entities.Vin>

@{
    ViewData["Title"] = "Liste des Vins";
}

<h1>Liste des Vins</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prix Unitaire</th>
            <th>Quantité en Stock</th>
            <th>Famille</th>
            <th>Fournisseur</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vin in Model)
        {
            <tr>
                <td>@vin.Name</td>
                <td>@vin.UnitPrice €</td>
                <td>@vin.QuantityStock</td>
                <td>@vin.Famille?.Name</td>
                <td>@vin.Fournisseur?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@vin.Id" class="btn btn-info">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>
