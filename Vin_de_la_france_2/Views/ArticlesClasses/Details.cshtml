@model Vin_de_la_france_2.Models.ArticlesClass

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nom du produit
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Prix unitaire
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt class = "col-sm-2">
            Quantité en stock
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantityStock)
        </dd>
        <dt class = "col-sm-2">
            Stock Minimum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinimumThreshold)
        </dd>
        <dt class = "col-sm-2">
            Référence
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reference)
        </dd>
        <dt class = "col-sm-2">
            Famille
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FamillesClass.Name)
        </dd>
        <dt class = "col-sm-2">
            Fournisseur
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FournisseursClass.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Retour au catalogue</a>
</div>
